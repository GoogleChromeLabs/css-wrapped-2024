---
import SectionAside from "./section.aside.astro";
import Example from "../features/example.astro";
import Scrollbar from "../features/scrollbar.astro";
import BackdropInheritance from "../features/backdrop-inheritance.astro";
---

<section>
  <header>
    <h2>Developer Experience</h2>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
  </header>
  <SectionAside />

  <div class="features-list">
    <Scrollbar />
    <BackdropInheritance />
    <Example />
    <Example />
  </div>
</section>

<style>
  section {
    max-inline-size: 1024px;
    margin-inline: auto;
    display: grid;
    gap: var(--size-3);
    grid-template-columns: 1fr var(--size-content-1);

    @media (width < 900px) {
      grid-template-columns: 1fr 5ch;
    }

    > header {
      margin-block-end: var(--size-8);
    }

    > .features-list {
      grid-column: 1;

      &:not(:first-of-type) {
        margin-block-start: var(--size-11);
      }
    }
  }

  .features-list {
    animation-timeline: --features-view;
    display: grid;
    gap: var(--size-10);
  }
</style>
