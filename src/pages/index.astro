---
import "../styles/global.css";

import HeaderPrimary from "../components/header.primary.astro";
import Hero from "../components/hero.astro";
import FeatureFillstrip from "../components/feature.fillstrip.astro";
import SectionDeveloperExperience from "../components/section.developerexperience.astro";
import SectionComponents from "../components/section.components.astro";
import SectionInteractions from "../components/section.interactions.astro";
import Footer from "../components/footer.astro";
---

<!--
