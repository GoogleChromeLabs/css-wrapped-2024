--><!-- remove the VT until the clientside theme switch is loaded so we dont flash a VT -->
<html lang="en" style="view-transition-name: none">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>CSS Wrapped 2024</title>
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/baseline-status@1.0.4/baseline-status.min.js"
    ></script>
  </head>
  <body>
    <HeaderPrimary />
    <Hero />
    <FeatureFillstrip />

    <main>
      <div class="biome glitch">
        <div class="--start"></div>
        <SectionDeveloperExperience />
        <div class="--end"></div>
      </div>
      <div class="biome desert">
        <div class="--start"></div>
        <SectionComponents />
        <div class="--end"></div>
      </div>
      <div class="biome jungle">
        <div class="--start"></div>
        <SectionInteractions />
        <div class="--end"></div>
      </div>
    </main>

    <Footer />
  </body>
</html>

<style>
  main {
    display: grid;
    gap: var(--size-14);
  }

  .biome {
    display: grid;
    grid-template-columns: 1fr auto 1fr;

    > .--start {
      background-image: url(/desert-side.jpg);
      background-position: right top;
    }

    > section {
      background: url(/desert-middle.jpg) fixed;
    }

    > .--end {
      background-image: url(/desert-side.jpg);
      background-position: left top;
    }

    > .--end,
    .--start {
      position: sticky;
      top: 0;
      height: 100vh;
      background-size: auto 100vh;
    }
  }
</style>
